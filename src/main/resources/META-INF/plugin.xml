<idea-plugin>
    <id>com.github.l0drex.intellijkdebreezetheme</id>
    <name>KDE Breeze Theme</name>
    <vendor email="hoffmann_lorenz@protonmail.com" url="https://github.com/l0drex">Lorenz Hoffmann</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.l0drex.intellijkdebreezetheme.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.l0drex.intellijkdebreezetheme.services.MyProjectService"/>
        <themeProvider id="edd71330-1a5d-43d4-94ea-b06063eab123" path="/Breeze_Dark.theme.json"/>
        <themeProvider id="a4451a8a-0823-4d90-85bd-8ceb56a6638d" path="/Breeze_Light.theme.json"/>
        <themeProvider id="ccc3f649-e4a0-41e5-a670-266607f4b22a" path="/test.theme.json"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.l0drex.intellijkdebreezetheme.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
